@model Team
<div class="container">
    <div class="row">
        <div class="col-12">
            <form asp-action="DeleteTeam" method="post" class="card" style="width: 18rem;">
                <img src="~/uploads/teams/@Model.ImageUrl" class="card-img-top" alt="Image" />
                <div class="card-body">
                    <h5 class="card-title">@Model.Name @Model.Surname</h5>
                    <p class="card-text">@Model.Description</p>
                    <input asp-for="@Model.Id" hidden value="@Model.Id" />
                    <a asp-action="index" asp-controller="team" class="btn btn-warning">Go Back</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>