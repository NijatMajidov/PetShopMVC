@model List<Team>
@{
    int count = 0;
}

<h1>
    Teams
    <a class="btn btn-primary " asp-action="Create">Create</a>
</h1>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">SurName</th>
                <th scope="col">Description</th>
                <th scope="col">ImageUrl</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="~/uploads/teams/@item.ImageUrl" width="100" height="100" alt="Image" />
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Team" asp-route-id=@item.Id>Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Team" asp-route-id=@item.Id>Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>